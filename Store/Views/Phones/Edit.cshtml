@model CreatePhoneViewModel

@{
    ViewBag.Title = "Редактирование";
    Layout = "_Layout";
}

<h2>Редактирование</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit" asp-controller="Phones" method="post">
            <div class="form_row">
                <label for="">
                    Название
                    <input asp-for="@Model.Phone.Name" type="text" value="@@Model.Phone.Name">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Бренд
                    <input asp-for="@Model.Phone.Brand" type="text" value="@Model.Phone.Brand">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Стоимость
                    <input asp-for="@Model.Phone.Price" type="text" value="@Model.Phone.Price">
                </label>
            </div>
            
            <button type="submit" > Изменить </button>
        </form>
    </div>
</div>
