@model CreatePhoneViewModel;

@{
    ViewBag.Title = "Добавить смартфон";
    Layout = "_Layout";
}

<h2>Добавить новый смартфон</h2>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" asp-controller="Phones" method="post">
            <div class="form_row">
                <label for="">
                    Название
                    <input asp-for="@Model.Phone.Name" type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Бренд
                    <input asp-for="@Model.Phone.Brand"type="text">
                </label>
            </div>
            <div class="form_row">
                <label for="">
                    Стоимость
                    <input asp-for="@Model.Phone.Price" type="text">
                </label>
            </div>
            <button type="submit"> Добавить</button>
        </form>
    </div>
</div>